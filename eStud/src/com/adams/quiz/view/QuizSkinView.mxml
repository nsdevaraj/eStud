<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mediators="com.adams.quiz.view.mediators.*" 
		xmlns:components="com.adams.swizdao.views.components.*" xmlns:components1="com.adams.quiz.view.components.*">	
	<fx:Metadata>
		[HostComponent("com.adams.quiz.view.mediators.QuizViewMediator")]
	</fx:Metadata>  
	<fx:Script>
		<![CDATA[
			/*
			
