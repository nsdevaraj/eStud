	<s:Group width="100%" height="100%">
		<s:VGroup top="20">
			<components:NativeButton id="home" label="home"/>
			<s:Label id="choice" styleName="header" maxDisplayedLines="1"/>
		</s:VGroup>
		<s:TextArea id="question" editable="false" maxHeight="450" top="150" selectable="false"/> 
		<s:HGroup id="footer" width="100%" bottom="20">
			<components:NativeButton id="back" label="back"/>
			<s:NumericStepper  id="navigate" maxChars="2" textAlign="center" minimum="1" stepSize="1" />
			<components:NativeButton id="next" label="next"/>
			<components:NativeButton id="quiz" label="quiz" includeInLayout="{quiz.visible}"/>
		</s:HGroup>
	</s:Group> 
