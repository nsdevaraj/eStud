<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mediators="com.adams.quiz.view.mediators.*" 
		xmlns:components="com.adams.swizdao.views.components.*">	 
	<s:states>
		<s:State name='Menu'/> 
		<s:State name='Chapter'/>
	</s:states> 
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout id="vertical" />
		</s:layout>
		<s:List id="menuList" labelField="menuLabel" includeIn="Menu" 
				selectionColor="black" width="100%" height="100%"/>
		<s:List id="chapterList" labelField="chapterLabel" includeIn="Chapter"  width="100%" height="100%">
			<s:layout>
				<s:TileLayout />
			</s:layout>
		</s:List>
	</s:Group>
</s:Skin>